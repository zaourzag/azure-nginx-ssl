{
	"name": "nodejs-express-template",
	"version": "1.0.0",
	"description": "Scalable and basic template for making Node.js apps by using express",
	"main": "index.js",
	"scripts": {
		"dev": "nodemon index.js",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier-eslint \"$PWD/{,!(node_modules)/**/}*.{js,json}\"",
		"format:fix": "prettier-eslint --write \"$PWD/{,!(node_modules)/**/}*.{js,json}\" --use-tabs",
		"test": "mocha  \"./*/*.js\" --exit ",
		"start": "node index.js",
		"after": "npm run lint:fix && npm run lint && npm run format:fix && npm run format && npm test",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.js": [
			"npm run lint:fix",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@aero/http": "^1.1.1",
		"@apidevtools/swagger-express-middleware": "^4.0.2",
		"@now/node": "^1.8.5",
		"bcrypt": "^5.0.0",
		"body-parser": "^1.19.0",
		"dotenv": "^8.2.0",
		"ejs": "^3.1.6",
		"express": "^4.17.3",
		"express-ip": "^1.0.4",
		"fs": "^0.0.1-security",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.9.15",
		"path": "^0.12.7",
		"pug": "^3.0.2",
		"swagger-jsdoc": "^6.1.0",
		"swagger-ui-express": "^4.3.0",
		"unicode-13.0.0": "^0.8.0"
	},
	"devDependencies": {
		"eslint": "^7.11.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-prettier": "^3.1.3",
		"husky": "^7.0.0",
		"lint-staged": "^10.2.9",
		"mocha": "^9.2.2",
		"prettier": "^2.0.5",
		"prettier-eslint-cli": "^5.0.0",
		"swagger-autogen": "^2.20.6"
	}
}
